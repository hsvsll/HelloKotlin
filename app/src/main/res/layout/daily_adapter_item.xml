<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlDailyItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_bg_shape"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvArticleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Android"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvPublishedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvArticleType"
            android:padding="5dp"
            android:gravity="right"
            android:text="2015-06-07T03:47:48.288Z"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvArticleDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvArticleType"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="向上滑动隐藏toolbar以及toolbar的title文字动画效果"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvArticleAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvArticleDesc"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="https://github.com/swissonid/android-design-support-lib-sample"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/tvWelfare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlDailyItemContent"
        android:paddingTop="10dp"
        android:visibility="gone" />

</RelativeLayout>